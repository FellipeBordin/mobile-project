generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum VehicleStatus {
  IN_STOCK
  SOLD
}

model Vehicle {
  id            String        @id @default(cuid())
  name          String
  plate         String        @unique
  status        VehicleStatus @default(IN_STOCK)

  purchasePrice Decimal
  purchaseDate  DateTime?

  soldPrice     Decimal?
  soldDate      DateTime?

  expenses      Expense[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Expense {
  id        String   @id @default(cuid())
  vehicleId String
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  amount    Decimal
  note      String?
  createdAt DateTime @default(now())

  @@index([vehicleId])
}